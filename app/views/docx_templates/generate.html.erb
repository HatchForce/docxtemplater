<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Generate Docx File
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="box">
        <div class="box-body">
          <%= simple_form_for :faker, url: download_docx_template_path(format: :docx) do |f| %>
              <% @fields.each do |field| %>
                  <%= f.input field %>
              <% end %>

              <div class="form-group string">
                <label for="doc_name" class="string required control-label">File Name(optional)</label>
                <%= text_field_tag :doc_name, "", class: "string required form-control" %>
              </div>
              <%= f.submit "Download", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>



