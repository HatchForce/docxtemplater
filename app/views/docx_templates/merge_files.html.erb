<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Merger Files
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="box">
        <div class="box-body">
          <%= form_tag download_merge_files_docx_templates_path, multipart: true do %>
              <% 3.times do |i| %>
                <%= file_field_tag 'doc_files[]'  %>
              <% end %>
              <%= submit_tag "Merge" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
