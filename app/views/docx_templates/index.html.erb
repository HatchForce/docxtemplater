
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    List of templates
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">Templates</h3>
          <div class="box-tools pull-right">
            <button data-widget="collapse" class="btn btn-box-tool"><i class="fa fa-minus"></i></button>
          </div><!-- /.box-tools -->
        </div><!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>
                #ID
              </th>
              <th>
                Template
              </th>
              <th>
                Actions
              </th>
            </tr>
            <% @docx_templates.each do |docx_template| %>
                <tr>
                  <td>
                    <%= docx_template.id %>
                  </td>
                  <td>
                    <%= docx_template.name %>
                  </td>
                  <td>
                    <%= link_to "Generate", generate_docx_template_path(docx_template) %>
                  </td>
                </tr>
            <% end %>
          </table>
        </div><!-- /.box-body -->
      </div>
    </div>
  </div>
</section>
