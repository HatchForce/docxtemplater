<div class="login-box">
  <div class="login-logo">
    <a href="/"><b>Docx</b>Template</a>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-group has-feedback">
          <%= f.input_field :email, class: "form-control", placeholder: "Email" %>
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.input_field :password, class: "form-control", placeholder: "Password" %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-group has-feedback">
          <button class="btn btn-primary btn-block btn-flat" type="submit">Sign In</button>
        </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>






